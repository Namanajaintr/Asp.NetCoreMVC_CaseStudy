@model DictionaryMVCWebApp.Models.Word

@{
    ViewData["Title"] = "Edit";
}
<div class="container text-center">
    <h1 class="mt-5">Edit your word here</h1>
    
        <hr />
            <div class="card text-white bg-warning mb-3" style="max-width: 50rem;">
                <form asp-action="Edit" class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group text-capitalize text-black-50 text-center" >
                        <label asp-for="Words" class="control-label"></label>
                        <input asp-for="Words" class="form-control" />
                        <span asp-validation-for="Words" class="text-danger"></span>
                    </div>
                    <div class="form-group text-capitalize text-black-50">
                        <label asp-for="Definition" class="control-label"></label>
                        <input asp-for="Definition" class="form-control" />
                        <span asp-validation-for="Definition" class="text-danger"></span>
                    </div>
                    <div class="form-group card-footer">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-light">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
